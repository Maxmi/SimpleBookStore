{
  "name": "BookStore",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "db:create": "psql -f src/models/db/schema.sql",
    "load_data": "psql -d bookstore < src/models/db/seed/init_data.sql",
    "db:reset": "npm run db:create && npm run load_data && npm run session_store:create",
    "session_store:create": "psql bookstore < node_modules/connect-pg-simple/table.sql",
    "test:db:create": "createdb bookstore_test",
    "test:db:drop": "dropdb bookstore_test",
    "test:db:load_schema": "psql bookstore_test < ./src/models/db/schema.sql",
    "test:db:load_data": "psql bookstore_test < ./test/seed/books.sql",
    "test:db:reset": "npm run test:db:drop && npm run test:db:create && npm run test:db:load_schema && npm run test:db:load_data && npm run sesstion_store:create",
    "test": "export NODE_ENV=test && npm run test:db:reset && mocha --exit",
    "lint": "eslint *.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.2",
    "connect-pg-simple": "^4.2.1",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.2",
    "express-paginate": "^0.3.0",
    "express-session": "^1.15.6",
    "lodash": "^4.17.4",
    "pg-promise": "^7.3.2",
    "pug": "^2.0.0-rc.4"
  },
  "devDependencies": {
    "ajv": "^5.5.0",
    "eslint": "^4.12.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.5.1",
    "pg-monitor": "^0.8.3"
  }
}
