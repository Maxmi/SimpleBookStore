extends layout
block content
  a#homePage.btn.btn-primary(href='/' role='button') Go Back to Home Page
  
  form.bookAction(action=`/books/${id}?_method=PUT` method='POST')
    button.btn.btn-info(type='submit') Update
  
  form.bookAction(action=`/books/${id}?_method=DELETE` method='POST')
    button.btn.btn-warning(type='submit') Delete
  
