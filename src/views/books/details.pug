  ul.bookDetails
    li.list-group-item
      label(for='id') ID
      div(name='id').form-control #{id}
      label(for='title') Title 
      div(name='title').form-control #{title}
      label(for='author') Author
      div(name='author').form-control #{author}
      label(for='genre') Genre 
      div(name='genre').form-control #{genre}
      label(for='height') Height
      div(name='height').form-control #{height}
      label(for='publisher') Publisher
      div(name='publisher').form-control #{publisher}
