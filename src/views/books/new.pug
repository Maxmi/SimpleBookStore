extends layout
block content
  h1 New Book
  br
  
  div.container
    a#homePage.btn.btn-info(href='/' role='button') Go Back to Home Page
    form.addBook(method='POST')
      label(for='title') Title:
      input#title.form-control(type='text' name='title')
      br
      
      label(for='author') Author:
      input#author.form-control(type='text' name='author')
      br
        
      label(for='genre') Genre:
      input#genre.form-control(type='text' name='genre')
      br
      
      label(for='height') Height:
      input#genre.form-control(type='text' name='height')
      br
          
      label(for='publisher') Publisher:
      input#genre.form-control(type='text' name='publisher')
      br  
        
      //- p #{error}
      //- p #{message}
      button#addBookBtn.btn.btn-primary(type='submit') Add to inventory 
