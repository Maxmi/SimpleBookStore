extends layout
block content
  h1 Hello Reader!
  div.container
    
    div.form-group
      form#searchForm.form-horizontal(action='/searchResult' method='get')
        input#search.form-control(type='text' name='search' placeholder='Search by title, author or genre' value=`${query}` autofocus)
        button#searchBtn.btn.btn-info(type='submit') Search
        a#addBook.btn.btn-primary(href='new' role='button') Add New Book 
    
    div#listOfBooks
      table.table.table-bordered
        tr
          th(scope='col') #
          th(scope='col') Title
          th(scope='col') Author 
          th(scope='col') details 
        each book in data 
          tr
            td= book.id
            td= book.title 
            td= book.author 
            td
              a(href='books/'+book.id) view details 
    
    include paginate

  
